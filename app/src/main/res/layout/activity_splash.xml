<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kai.uguide.SplashActivity"
    android:background="@drawable/bg">

    <View
        android:id="@+id/fakeView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@null" />

    <ImageView
        android:id="@+id/logo_fore_hp_shadow"
        android:src="@drawable/logo_f_b_shadow"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_fore_hp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:layout_above="@+id/fakeView"
        android:layout_toLeftOf="@+id/fakeView"
        android:layout_marginBottom="-133dp"
        android:layout_marginRight="-133dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/earth_w"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_above="@+id/fakeView"
        android:layout_toLeftOf="@+id/fakeView"
        android:contentDescription="@string/logo_fore_earth"
        android:layout_marginBottom="-50dp"
        android:layout_marginRight="-4dp" />

    <ImageView
        android:id="@+id/logo_fore_hp"
        android:src="@drawable/logo_f_b"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_fore_hp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true" />

</RelativeLayout>
